<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping package="com.taiji.website.domain">
<class 
    name="ArticleInfo" 
    table="ArticleInfo">
	<id
		name="id" type="java.lang.Integer"
        column="ID"
    >
      <generator class="increment" />
    </id>
  
    <property
        name="title"
        type="java.lang.String"
        column="title"
    />
    <property name="content" 
       type="blob">
            <column name="CONTENT"/>
        </property>


    <property
        name="author"
        type="java.lang.String"
        column="author"
    />
    <property
        name="authorId"
        type="java.lang.Integer"
        column="authorId"
    />
   <property name="createdDate"
   		type="java.lang.String"
   		column="createdDate"
   	/>

    <property
        name="isRelease"
        type="java.lang.String"
        column="isRelease"
    />
    <property
        name="keyword"
        type="java.lang.String"
        column="keyword"
    />

    <property
        name="column"
        type="java.lang.String"
        column="columns"
    />

    <property
        name="isTop"
        type="java.lang.String"
        column="isTop"
    />
    <property
        name="viewCount"
        type="java.lang.Integer"
        column="viewCount"
    />
    <property
        name="firstImage"
        type="java.lang.String"
        column="firstImage"
    />
    <property
        name="isPass"
        type="java.lang.String"
        column="isPass"
    />
    <property
        name="resource"
        type="java.lang.String"
        column="resources"
    />
    <property
        name="subColumn"
        type="java.lang.String"
        column="subColumn"
    />
    <property
        name="releaseDate"
        type="java.lang.String"
        column="releaseDate"
    />
  

</class>
</hibernate-mapping>
