/*文字输入框效果样式控制*/
<attach event="onblur" onevent="getblur()"/>
<attach event="onfocus" onevent="getfocus()"/>
<script language="Javascript">
function getblur(){
	style.borderColor="#459ed7";
	style.borderWidth="1px";
	style.backgroundColor="#e8f5fd";
	style.color="#000000";
}

function getfocus(){
	style.borderColor="#fabe49";
	style.borderWidth="1px";
	style.backgroundColor="#fefeec";
	style.color="#FF6600";
}
</script>